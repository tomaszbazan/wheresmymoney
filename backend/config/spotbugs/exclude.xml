<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <Match>
        <Class name="~.*\.generated\..*"/>
    </Match>

    <Match>
        <Class name="~.*\$.*Builder"/>
    </Match>

    <!-- Return value ignored in test methods -->
    <Match>
        <Class name="~.*Test"/>
        <Method name="~.*shouldThrowException.*"/>
        <Bug pattern="RV_RETURN_VALUE_IGNORED_INFERRED"/>
    </Match>

    <!-- GeminiConfig throws exception in constructor for validation -->
    <Match>
        <Class name="pl.btsoftware.backend.ai.infrastructure.config.GeminiConfig"/>
        <Bug pattern="CT_CONSTRUCTOR_THROW"/>
    </Match>

    <!-- Test data intentionally uses \n in formatted strings -->
    <Match>
        <Class name="pl.btsoftware.backend.csvimport.domain.GeminiResponseParserTest"/>
        <Bug pattern="VA_FORMAT_STRING_USES_NEWLINE"/>
    </Match>
    <Match>
        <Class name="pl.btsoftware.backend.csvimport.domain.CategorySuggestionServiceTest"/>
        <Bug pattern="VA_FORMAT_STRING_USES_NEWLINE"/>
    </Match>
</FindBugsFilter>